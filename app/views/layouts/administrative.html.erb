<!DOCTYPE html>
<html>
<head>
  <title>RentalSystem</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container-fluid">
    <div class="row" id="header">
        <div class="col-md-4">
            <h1>Logo</h1>
        </div>
        <div class="col-md-8">
            <%= link_to "Home", "/" %>
            <%= link_to "Admin", "/admin/index" %>
            <%= link_to "Products", "/products" %>
            <%= link_to "Log Out", "/users/sign_out", :method => "delete" %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <%= yield %>
        </div>
    </div>
    <div class="row">
        <%= render partial: "layouts/footer" %>
    </div>
</div>

</body>
</html>
